    { "term": "precision", "definition": "Out of all positive results given by the AI, the fraction that are correct." },
    { "term": "recall", "definition": "Out of all real positives, the fraction the AI actually finds." },
    { "term": "threshold", "definition": "The cut-off score the AI uses to decide between classes (e.g., brake / no brake)." }
